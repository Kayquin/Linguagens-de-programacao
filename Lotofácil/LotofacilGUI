import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;
import java.util.Scanner;

public class LotofacilGUI {
    private JFrame frame;
    private JPanel panel, panel2, panel3, panel4;
    private JButton button0, button1, button2, button3, button4;
    private JLabel label;
    private Scanner scanner;
    private Random random;
    private JTextField textField;
    private int numeroSorteado;
    private JDialog previousDialog;

    // CONSTRUTOR ------------------------------------------------
    public LotofacilGUI() {
        frame = new JFrame("LOTOFÁCIL");
        panel = new JPanel();
        button0 = new JButton("Sair");
        button1 = new JButton("Apostar de 0 a 100");
        button2 = new JButton("Apostar de A à Z");
        button3 = new JButton("Apostar em par ou ímpar");
        label = new JLabel(" Escolha uma opção:");
        scanner = new Scanner(System.in);
        random = new Random();

        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 300); // Largura e altura
        frame.setLocationRelativeTo(null); // Centraliza o frame
        frame.setResizable(false); // Não permite redimensionar o frame
        frame.setLayout(new GridLayout(0, 1));
        frame.add(panel); 
        panel.setLayout(new GridLayout(0, 1));

        panel.add(label);
        panel.add(button1);
        panel.add(button2);
        panel.add(button3);
        panel.add(button0);

        button0.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                System.out.println("Saindo do jogo...");
                System.exit(0);
            }
        });

        button1.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                jogarzeroacem();
            }
        });

        button2.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                jogarLetras();
            }
        });

        button3.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                jogarParImpar();
            }
        });

        frame.setVisible(true);
    }



    // PAINEL DE 0 A 100 ------------------------------------------------

    public void jogarzeroacem() {
        frame = new JFrame("Jogar Zero a Cem");
        panel2 = new JPanel();
        textField = new JTextField(10); // Define o tamanho do campo de texto
        JButton closeButton = new JButton("Voltar"); // Botão para fechar o frame
        button4 = new JButton("Apostar de 0 a 100");
        label = new JLabel("Digite um número de 0 a 100: ");
        
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 130); // Largura e altura
        frame.setLocationRelativeTo(null); // Centraliza o frame
        frame.setResizable(false); // Não permite redimensionar o frame
        frame.setLayout(new GridLayout(0, 1));
        frame.add(panel2);
        panel2.setLayout(new BorderLayout()); // Define o layout como BorderLayout

        JPanel inputPanel = new JPanel(); // Painel para o campo de texto e o rótulo
        inputPanel.add(label);
        inputPanel.add(textField);
        panel2.add(inputPanel, BorderLayout.NORTH); // Adiciona o inputPanel no lado norte (topo)

        JPanel buttonPanel = new JPanel(new FlowLayout(FlowLayout.CENTER)); // Painel para os botões
        buttonPanel.add(closeButton);
        buttonPanel.add(button4);
        panel2.add(buttonPanel, BorderLayout.SOUTH); // Adiciona o buttonPanel no lado sul (baixo)

        
        closeButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                frame.dispose();
            }
        });

        button4.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                jogarJogozeroa100();
            }
        });

        frame.setVisible(true); 



        
        
    }



    /// PAINEL LETRAS ------------------------------------------------

    public void jogarLetras() {
        frame = new JFrame("Jogar Letras");
        panel3 = new JPanel(); // Novo painel panel2
        textField = new JTextField(10); // Define o tamanho do campo de texto
        JButton closeButton = new JButton("Voltar"); // Botão para fechar o frame
        button2 = new JButton("Apostar de A à Z");
        label = new JLabel("Digite uma letra de A à Z: ");
    
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 130); // Largura e altura
        frame.setLocationRelativeTo(null); // Centraliza o frame
        frame.setResizable(false); // Não permite redimensionar o frame
        frame.setLayout(new GridLayout(0, 1));
        frame.add(panel3); // Adiciona panel3 ao frame
        panel3.setLayout(new BorderLayout()); // Define o layout como BorderLayout para panel3
    
        JPanel inputPanel = new JPanel(); // Painel para o campo de texto e o rótulo
        inputPanel.add(label);
        inputPanel.add(textField);
        panel3.add(inputPanel, BorderLayout.NORTH); // Adiciona o inputPanel no lado norte (topo)
    
        JPanel buttonPanel = new JPanel(new FlowLayout(FlowLayout.CENTER)); // Painel para os botões
        buttonPanel.add(closeButton);
        buttonPanel.add(button2);
        panel3.add(buttonPanel, BorderLayout.SOUTH); // Adiciona o buttonPanel no lado sul (baixo)
    
        closeButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                frame.dispose();
            }
        });


        frame.setVisible(true);
    }





    // PAINEL PAR OU IMPAR ------------------------------------------------

    public void jogarParImpar() {
        frame = new JFrame("Jogar Impar ou Par");
        panel4 = new JPanel(); // Novo painel panel4
        textField = new JTextField(10); // Define o tamanho do campo de texto
        JButton closeButton = new JButton("Voltar"); // Botão para fechar o frame
        button3 = new JButton("Apostar em par ou ímpar");
        label = new JLabel("Digite um número: ");


        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 130); // Largura e altura
        frame.setLocationRelativeTo(null); // Centraliza o frame
        frame.setResizable(false); // Não permite redimensionar o frame
        frame.setLayout(new GridLayout(0, 1));
        frame.add(panel4); // Adiciona panel4 ao frame
        panel4.setLayout(new BorderLayout()); // Define o layout como BorderLayout para panel4
    
        JPanel inputPanel = new JPanel(); // Painel para o campo de texto e o rótulo
        inputPanel.add(label);
        inputPanel.add(textField);
        panel4.add(inputPanel, BorderLayout.NORTH); // Adiciona o inputPanel no lado norte (topo)
    
        JPanel buttonPanel = new JPanel(new FlowLayout(FlowLayout.CENTER)); // Painel para os botões
        buttonPanel.add(closeButton);
        buttonPanel.add(button3);
        panel4.add(buttonPanel, BorderLayout.SOUTH); // Adiciona o buttonPanel no lado sul (baixo)
        
        closeButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                frame.dispose();
            }
        });


        frame.setVisible(true);
    }



    private void jogarJogozeroa100() {
        // Gerar um número aleatório de 0 a 100
        Random random = new Random();
        numeroSorteado = random.nextInt(101);

        int tentativas = 0;
        while (true) {
            String texto = textField.getText();
            try {
                int palpite = Integer.parseInt(texto);
                if (palpite == numeroSorteado) {
                    JOptionPane.showMessageDialog(frame, "Parabéns! Você acertou o número em " + tentativas + " tentativas.", "Resultado", JOptionPane.INFORMATION_MESSAGE);
                    break;
                } else if (palpite < numeroSorteado) {
                    if (previousDialog != null) {
                        previousDialog.dispose(); // Fecha a caixa de diálogo anterior antes de exibir uma nova
                    }
                    previousDialog = new JOptionPane("O número é maior. Tente novamente!", JOptionPane.INFORMATION_MESSAGE).createDialog("Dica");
                    previousDialog.setVisible(true);
                } else {
                    if (previousDialog != null) {
                        previousDialog.dispose(); // Fecha a caixa de diálogo anterior antes de exibir uma nova
                    }
                    previousDialog = new JOptionPane("O número é menor. Tente novamente!", JOptionPane.INFORMATION_MESSAGE).createDialog("Dica");
                    previousDialog.setVisible(true);
                }
            } catch (NumberFormatException ex) {
                if (previousDialog != null) {
                    previousDialog.dispose(); // Fecha a caixa de diálogo anterior antes de exibir uma nova
                }
                previousDialog = new JOptionPane("Por favor, insira um número válido!", JOptionPane.ERROR_MESSAGE).createDialog("Erro");
                previousDialog.setVisible(true);
            }

            tentativas++;
        }
    }



    public static void main(String[] args) {
        new LotofacilGUI();
    }


}
